<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>
    <body>
        <%- include('layouts/navbar'); -%>
            <!-- Page Header-->
            <header class="masthead" style="background-image: url('/assests/img/register-bg.jpg')">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="page-heading">
                                <h1>New Account</h1>
                                <span class="subheading">Hurray... This is it !!!</span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <form action='/user/register' method="POST" enctype="multipart/form-data">
                            <div class="control-group">
                                <div class="form-floating">
                                    <input class="form-control" id="username" type="text" placeholder="Username"
                                        name="username" />
                                    <label> Enter Username</label>
                                </div>
                                <br>
                                <div class="form-floating">
                                    <input class="form-control" id="password" name="password" type="password" placeholder="Password" data-sb-validations="required" />
                                    <label>Enter Password</label>
                                </div>
                                <br>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Register</button>
                                </div>
                        </form>
                        <div class="form-group">
                            <p>Have an Account? <a href="/auth/login" style="text-decoration: none;"> Login. </a></p>
                        </div>
                    </div>
                </div>
            </div>
            </main>
            <%- include('layouts/footer'); -%>
            <%- include('layouts/scripts'); -%>
    </body>

</html>